<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                Nickgismokato
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/about_me">
                    <BarIcon IconName="IconName.User"/>
                    About me
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown @bind-Visible="pagesBarVisible">
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Edit" />
                        Pages
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/simple-form">Simple Form</BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/markdown">Markdown</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.FileAlt"/>
                        Docs
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/satyrrevy">Satyr Documentation</BarDropdownItem>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.File"/>
                                documents
                            </BarDropdownToggle>
                            <BarDropdownMenu>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/apps/satyrrevy/test">test</BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Smartphone" />
                        Apps
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/todo">
                            Todo
                        </BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/warframeapp">
                            WarframeApp
                        </BarDropdownItem>
                    </BarDropdownMenu>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/reunionlog">
                            ReunionLog App
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink To="/about">
                    <BarIcon IconName="IconName.Info"/>
                    About
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/brand-logo.png" style="width:32px; height: 32px" />;
}